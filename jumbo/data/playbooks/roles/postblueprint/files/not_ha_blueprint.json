{
  "Blueprints": {
    "stack_name": "HDP",
    "stack_version": "2.6"
  },
  "configurations": [
    {
      "oozie-env": {
        "properties": {
          "oozie_database": "Existing PostgreSQL Database",
          "oozie_user": "oozie"
        }
      }
    },
    {
      "oozie-site": {
        "properties": {
          "oozie.db.schema.name": "oozie",
          "oozie.service.JPAService.jdbc.driver": "org.postgresql.Driver",
          "oozie.service.JPAService.jdbc.url": "jdbc:postgresql://%HOSTGROUP::host_group_4%:5432/oozie",
          "oozie.service.JPAService.jdbc.username": "oozie"
        }
      }
    },
    {
      "hbase-env": {
        "properties": {
          "hbase_master_heapsize": "1024",
          "hbase_regionserver_heapsize": "1024",
          "hbase_user": "hbase"
        }
      }
    },
    {
      "hbase-site": {
        "properties": {
          "hbase.master.info.port": "16010",
          "hbase.regionserver.handler.count": "30",
          "hbase.regionserver.info.port": "16030",
          "hbase.regionserver.port": "16020",
          "hbase.rootdir": "/apps/hbase/data",
          "hbase.rpc.protection": "authentication",
          "hbase.security.authentication": "simple",
          "hbase.security.authorization": "false",
          "hbase.superuser": "hbase",
          "hbase.tmp.dir": "/tmp/hbase",
          "hbase.zookeeper.property.clientPort": "2181",
          "hbase.zookeeper.quorum": "%HOSTGROUP::host_group_3%,%HOSTGROUP::host_group_2%,%HOSTGROUP::host_group_4%",
          "zookeeper.znode.parent": "/hbase-unsecure"
        }
      }
    },
    {
      "hdfs-site": {
        "properties": {
          "dfs.namenode.http-address": "%HOSTGROUP::host_group_2%:50070",
          "dfs.namenode.https-address": "%HOSTGROUP::host_group_2%:50470",
          "dfs.namenode.rpc-address": "%HOSTGROUP::host_group_2%:8020",
          "dfs.namenode.secondary.http-address": "%HOSTGROUP::host_group_3%:50090"
        }
      }
    },
    {
      "yarn-site": {
        "properties": {
          "yarn.log.server.url": "http://%HOSTGROUP::host_group_2%:19888/jobhistory/logs",
          "yarn.resourcemanager.address": "%HOSTGROUP::host_group_2%:8050",
          "yarn.resourcemanager.admin.address": "%HOSTGROUP::host_group_2%:8141",
          "yarn.resourcemanager.ha.enabled": "false",
          "yarn.resourcemanager.hostname": "%HOSTGROUP::host_group_2%",
          "yarn.resourcemanager.recovery.enabled": "true",
          "yarn.resourcemanager.resource-tracker.address": "%HOSTGROUP::host_group_2%:8025",
          "yarn.resourcemanager.scheduler.address": "%HOSTGROUP::host_group_2%:8030",
          "yarn.resourcemanager.store.class": "org.apache.hadoop.yarn.server.resourcemanager.recovery.ZKRMStateStore",
          "yarn.resourcemanager.webapp.address": "%HOSTGROUP::host_group_2%:8088",
          "yarn.resourcemanager.webapp.https.address": "%HOSTGROUP::host_group_2%:8090",
          "yarn.timeline-service.address": "%HOSTGROUP::host_group_2%:10200",
          "yarn.timeline-service.webapp.address": "%HOSTGROUP::host_group_2%:8188",
          "yarn.timeline-service.webapp.https.address": "%HOSTGROUP::host_group_2%:8190"
        }
      }
    },
    {
      "core-site": {
        "properties": {
          "fs.defaultFS": "hdfs://%HOSTGROUP::host_group_2%:8020",
          "fs.trash.interval": "360",
          "hadoop.proxyuser.hcat.hosts": "%HOSTGROUP::host_group_4%",
          "hadoop.proxyuser.hive.hosts": "%HOSTGROUP::host_group_4%",
          "hadoop.proxyuser.oozie.hosts": "%HOSTGROUP::host_group_4%"
        }
      }
    },
    {
      "hive-site": {
        "properties": {
          "hive.exec.compress.output": "false",
          "hive.merge.mapfiles": "true",
          "hive.merge.mapredfiles": "false",
          "hive.metastore.uris": "thrift://%HOSTGROUP::host_group_3%:9083",
          "hive.server2.tez.initialize.default.sessions": "false",
          "hive.server2.transport.mode": "binary",
          "hive.zookeeper.quorum": "%HOSTGROUP::host_group_3%:2181,%HOSTGROUP::host_group_2%:2181,%HOSTGROUP::host_group_4%:2181",
          "javax.jdo.option.ConnectionDriverName": "org.postgresql.Driver",
          "javax.jdo.option.ConnectionURL": "jdbc:postgresql://%HOSTGROUP::host_group_4%:5432/hive",
          "javax.jdo.option.ConnectionUserName": "hive"
        }
      }
    },
    {
      "webhcat-site": {
        "properties": {
          "templeton.zookeeper.hosts": "%HOSTGROUP::host_group_3%:2181,%HOSTGROUP::host_group_2%:2181,%HOSTGROUP::host_group_4%:2181"
        }
      }
    },
    {
      "hive-env": {
        "properties": {
          "hive_database": "Existing PostgreSQL Database",
          "hive_database_name": "hive",
          "hive_database_type": "postgres"
        }
      }
    }
