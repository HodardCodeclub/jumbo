{
  "configurations": [
    {
      "core-site": {
        "ha.zookeeper.quorum": "{{ ZOOKEEPER.quorum | join(',') }}"
      }
    }
    {% if HIVE is defined %}
    ,{
      "hive-site": {
        "hive.zookeeper.quorum": "{{ ZOOKEEPER.quorum | join(',') }}"
      }
    },
    {
      "webhcat-site": {
        "templeton.zookeeper.hosts": "{{ ZOOKEEPER.quorum | join(',') }}"
      }
    }
    {% endif %}
    {% if HBASE is defined %}
    ,{
      "hbase-site": {
        "hbase.zookeeper.hosts" : "{{ ZOOKEEPER.quorum_no_port | join(',') }}"
      }
    }
    {% endif %}
  ]
}
